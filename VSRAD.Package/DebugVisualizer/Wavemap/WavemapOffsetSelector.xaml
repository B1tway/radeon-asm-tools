<UserControl x:Class="VSRAD.Package.DebugVisualizer.Wavemap.WavemapOffsetSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VSRAD.Package.DebugVisualizer.Wavemap"
             xmlns:viz="clr-namespace:VSRAD.Package.DebugVisualizer"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="70">
    <UserControl.Resources>
        <ResourceDictionary Source="..\..\ToolWindows\ControlStyle.xaml"/>
    </UserControl.Resources>
    <Grid x:Name="Root">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="65"/>
        </Grid.ColumnDefinitions>

        <local:WavemapOffsetInput x:Name="XOffsetSelector" Height="20"/>
        <TextBlock Grid.Row="1" Grid.RowSpan="3" VerticalAlignment="Top" HorizontalAlignment="Left" Text="{Binding WaveInfo}"
                   ToolTip="G: Group index under cursor&#x0a;W: Wave index under cursor&#x0a;L: Break line of wave under cursor"/>
    </Grid>
</UserControl>
