<UserControl x:Class="VSRAD.Package.DebugVisualizer.VisualizerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:VSRAD.Package.DebugVisualizer"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <DockPanel.Style>
            <Style TargetType="DockPanel">
                <Setter Property="Background" Value="White"/>
            </Style>
        </DockPanel.Style>
        <local:VisualizerHeaderControl x:Name="headerControl" DockPanel.Dock="Top"/>
        <local:VisualizerTableHost DockPanel.Dock="Bottom" x:Name="tableHost"/>
    </DockPanel>
</UserControl>
